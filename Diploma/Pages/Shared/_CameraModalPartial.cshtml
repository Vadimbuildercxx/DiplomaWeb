<div class="modal-content rounded-3 bg-black">
    <div class="modal-body">
        <form asp-page-handler="CameraCreateOrEdit" asp-route-id="@Model.Camera.Id" method="post" onsubmit="return jQueryModalPost(this, 'CameraListPartialView');">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
            <input asp-for="Camera.Id" class="form-control" type="hidden">

            <div class="row mb-3">
                <div class="col-lg-6">
                    <div class="form-floating mb-3">
                        <input asp-for="Camera.Name" class="form-control" placeholder="Тест камера">
                        <label asp-for="Camera.Name" for="floatingInput"></label>
                        <span asp-validation-for="Camera.Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-floating mb-3">
                        <input asp-for="Camera.Description" class="form-control" placeholder=" ">>
                        <label asp-for="Camera.Description" for="floatingInput"></label>
                        <span asp-validation-for="Camera.Description" class="text-danger"></span>
                    </div>
                    
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-lg-6">
                    <span asp-validation-for="Camera.AreaId" class="text-danger"></span>
                    <div class="form-floating mb-3">
                        <select asp-for="Camera.AreaId" asp-items="Model.Selects" class="form-select"></select>
                        <label asp-for="Camera.AreaId" class="form-label">Помещение</label>
                    </div>
                </div>
            </div>
            @*<div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
            <button type="button" class="btn btn-primary" data-listid="CameraListPartialView" data-handler="CameraListPartial" data-save="modal">Сохранить</button>
            </div>*@
            <div class="modal-footer">
                @*<button type="button" class="btn btn-secondary close-button" data-dismiss="modal">Отмена</button>*@
                <button type="submit" class="btn btn-primary save-button">Сохранить</button>
            </div>
        </form>
    </div>

</div>
