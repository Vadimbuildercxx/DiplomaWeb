@using Diploma.ViewModels;

@*// Pages/Shared/_PersonModalPartial.cshtml*@
@model PersonDTO
<!-- Modal -->

<div class="modal-content rounded-3 bg-black">
    <div class="modal-body">

        <div class="row mb-3">
            <div class="col-lg-6">
                <div class="form-floating mb-3">
                    <input asp-for="FullName" class="form-control" placeholder=" " readonly>
                    <label for="floatingInput">ФИО</label>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-floating mb-3">
                    <label asp-for="Email" for="floatingInput"></label>
                </div>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-lg-6">
                @*<div class="form-floating mb-3">
                   <label asp-for="LastName" for="floatingInput"></label>
                </div>*@
                @{
                    if (Model.Paths!=null)
                    {
                        foreach (string path in Model.Paths)
                        {
                            Console.WriteLine(path);
                            <img src="@path" alt="Image" />
                        }
                    }
                }
                

                
            </div>
            <div class="col-lg-6">
                <div class="form-floating mb-3">
                    <label asp-for="Phone" for="floatingInput"></label>
                </div>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-lg-6">
                <div class="form-floating mb-3">
                    @*<label asp-for="Patronymic" for="floatingInput">@Model.Patronymic</label>*@
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-floating mb-3">
                    <label asp-for="Age" for="floatingInput"></label>
                </div>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-lg-6">
                <legend class="col-form-label col-sm-2 pt-0 text-white">Пол</legend>
                <div class="col-sm-10">
                    <label asp-for="Gender" class="form-check-input" type="" id="gridRadios1" value="Male" checked></label>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-floating mb-3">
                    @*<input asp-for="FaceImagesPaths" type="" class="form-control" placeholder="/path">
                    <label asp-for="FaceImagesPaths" for="floatingInput"></label>*@
                    @*<span asp-validation-for="Age" class="text-danger"></span>*@
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript" language=javascript>
    $.validator.unobtrusive.parse(document);
</script>