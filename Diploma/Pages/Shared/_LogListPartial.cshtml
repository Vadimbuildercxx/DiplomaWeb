        @foreach(LogDTO log in Model)
        {
            <tr>
                <td><p class="text-white">@log.Id</p></td>
                <td><p class="text-white">@log.MessageType.ToString()</p></td>
                <td><p class="text-white">@log.Text</p></td>
                <td><p class="text-white">@log.CameraId</p></td>
                <td><p class="text-white">@log.CameraName</p></td>
                <td><p class="text-white">@log.PPEitem</p></td>
                <td><p class="text-white">@log.PersonName</p></td>
                <td><p class="text-white">@log.PersonConf</p></td>
                <td><p class="text-white">@log.DateTime</p></td>
                @*<td><a href="@Url.Page("Index", "DownloadFile", new { fileName = log.DetectionPath})">Download</a></td>*@
                <td>
                    <a href="#" onclick="jDownload('@log.DetectionPath?.Replace("\\", "\\\\")')" class="link-light text-white">Скачать</a>
                </td>

            </tr>
        }
    </tbody>
</table>
