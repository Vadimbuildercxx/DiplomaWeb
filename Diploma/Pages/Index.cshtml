@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<!doctype html>
<html lang="en" data-bs-theme="dark">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <title>Hello, world!</title>
    <!-- script src="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/js/bootstrap.min.js"></!-->
    <script language="JavaScript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.10.0/jquery.min.js"></script>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.7/dist/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <!-- SignalR-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.js"></script>

    @* <script src="~/lib/bootstrap/dist/js/bs5-toast.js"></script>*@
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400&display=swap" rel="stylesheet">
    <script src="~/js/notify.js"></script>

    
</head>



<body style="font-family: 'Montserrat', sans-serif;">
    <div class="wrapper">
        <div class=" container-fluid text-center mb-lg-3">
            <div class="d-block" style="height: 50vh">
                @*<p class="fs-1 text-light" style="height: 50vh; border: solid 5px pink">МОНИТОРИНГ<br />средств индивидуальной защиты</p>*@
                <p style="height: 25%"></p>
                <p class="fs-1 text-light">МОНИТОРИНГ</p>
                <p class="fs-2 text-light">средств индивидуальной защиты</p>
               
            </div>
            @if (User.Identity.IsAuthenticated)
            {
                <div class="row">
                    <div class="col">
                        <div class="card bg-black border border-secondary shadow-lg" style="height: 14rem">
                            <div class="card-body">
                                <h5 class="card-title text-light">Просмотр логов</h5>
                                <p class="card-text text-light">Просмотр данных об обнаружениях, а также изобаржений и времени нахождения.</p>
                                
                                <a class="btn btn-primary border-0" asp-area="" asp-page="/Logs" style="border-radius: 10px; bottom:0!important">Просмотр</a>
                                
                            </div>
                        </div>
                    </div>

                    <div class="col">
                        <div class="card bg-black border border-secondary shadow-lg" style="height: 14rem;">
                            <div class=" card-body solid-card-style">
                                <h5 class="card-title text-light">Редактирование данных</h5>
                                <p class="card-text text-light">Позволяет редактировать данные камер, сотрудников и областей. Также просмотр данных пользователей для администраторов.</p>
                                <a class="btn btn-primary border-0" asp-area="" asp-page="/Edit" style="border-radius: 10px">Редактировать</a>
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="card bg-black border border-secondary shadow-lg" style="height: 14rem">
                            <div class="card-body">
                                <h5 class="card-title text-light">Загрузка изображений</h5>
                                <p class="card-text text-light">Удобная и быстрая загрузка нескольких изображений для каждого работника системы.</p>
                                <a class="btn btn-primary border-0" asp-area="" asp-page="/Upload" style="border-radius: 10px">Загрузить</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    @*<form method="POST">
        <input type="text" name="product" />
        <input type="submit" asp-page-handler="Create" value="Отправить" />
    </form>*@
    <link rel="stylesheet" href="https://raw.githubusercontent.com/f3oall/awesome-notifications/master/dist/style.css">
    <script src="https://raw.githubusercontent.com/f3oall/awesome-notifications/master/dist/index.var.js"></script>
    <script>
        $(document).ready(function () {
            function test(){
                $.notify("Hello World");
            }
            
        });
    </script>
</body>
</html>



